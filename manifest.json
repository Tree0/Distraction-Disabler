{
    "manifest_version": 2,
    "name": "Distraction Disabler",
    "version": "1.0",
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["Content.js"]
      }
    ],
    "icons": { "48": "icon48.png", "128": "icon128.png" },
    "browser_action": {
      "default_popup": "Popup.html",
      "default_title": "Distraction Disabler"
    },
    "permissions": [
      "https://www.instagram.com/*",
      "https://www.facebook.com/*",
      "https://www.netflix.com/*"
    ]
  }